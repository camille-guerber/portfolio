{% extends "CGPortfolioBundle::layout.html.twig" %}

{% block title %}
    {{ parent() }} - Formations
{% endblock %}

{% block body %}
   <!-- Formations -->
    <div class="affichage-education">
        <h3 class="h-style-1">Mes formations</h3>
        <ul class="affichage-education-list">
        {% for education in educations %}                
                {% if education.logoSrc %}
                    <a class="a-style-1" href="{{ path('cg_portfolio_education_show', {'id': education.id }) }}">
                        <li>
                            <p>Bac + {{ education.degree }} </p>
                            <p>{{ education.school|upper }}</p>
                            <h4>{{ education.title }}</h4>
                            <img src="{{ education.logoSrc }}"/>
                        </li>
                    </a>
                {% endif %}
        {% endfor %}
        </ul>
    </div>

{% endblock %}


