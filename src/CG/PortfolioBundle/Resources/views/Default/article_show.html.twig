{% extends "CGPortfolioBundle::layout.html.twig" %}

{% block title %}
    {{ parent() }} - {{ article.titre }}
{% endblock %}

{% block body %} 
    <div class="article-container">
        <h3 class="h-style-1">{{ article.titre }}</h3>
        <div class="article-date">
            {{ article.dateCreation|localizeddate('none', 'none', 'fr', null, 'd MMMM Y') }}
        </div>
        <hr class="hr-style-1">
        <div class="article-content">
            {{ article.content|raw }}
        </div>
    </div>
{% endblock %}